<style>
	table,
	td,
	th {
		border: 1px solid black;
		border-collapse: collapse;
		width: 70%;
	}
</style>

<table>
	<caption>
		<h3>{{ 'Student Enrollments'|t }}</h3>
	</caption>
	<thead>
		<tr>
			<th>{{ 'Student names'|t }}</th>
			<th>{{ 'Course name'|t }}</th>
			<th>{{ 'Enrollment time'|t }}</th>
		</tr>
	</thead>

	{% if enrollments %}
		<tbody>
			{% for enrollment in enrollments %}
				<tr>
					<td>{{ enrollment.student_name }}</td>
					<td>{{ enrollment.course_name }}</td>
					<td>{{ enrollment.enrollment_time }}</td>
				</tr>
			{% endfor %}
		</tbody>
	{% else %}
		<tbody>
			<tr>
				<th colspan="3" style="text-align: center;">
					{{ 'No enrollments found.'|t }}
				</th>
			</tr>
		</tbody>
	{% endif %}
</table>
